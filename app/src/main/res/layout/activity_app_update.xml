<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_splash_root"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white" >

        <!-- Splash Logo-->
        <ImageView
            android:id="@+id/iv_splash_logo"
            android:layout_width="@dimen/md_200"
            android:layout_height="@dimen/md_200"
            android:src="@drawable/logo_app"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@id/iv_splash_company" />

        <!-- Splash Company Name-->
        <ImageView
            android:id="@+id/iv_splash_company"
            android:layout_width="@dimen/md_70"
            android:layout_height="wrap_content"
            android:src="@drawable/logo_project"
            android:layout_marginBottom="@dimen/md_32"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
