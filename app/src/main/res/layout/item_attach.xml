<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingEnd="@dimen/md_8" >

        <!-- Main Box-->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cv_attach_box"
            android:layout_width="@dimen/md_180"
            android:layout_height="@dimen/md_55"
            android:layout_marginEnd="@dimen/md_18"
            android:paddingVertical="@dimen/md_10"
            android:paddingHorizontal="@dimen/md_10"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:background="@drawable/bg_attach_gray_corner" >

            <!-- Box1 : 첨부파일 정보(이름, 사이즈)-->
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/cl_attach_info"
                android:layout_width="@dimen/md_0"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/md_10"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@id/iv_delete" >

                <!-- Box1-1 : 첨부파일 이름-->
                <TextView
                    android:id="@+id/tv_attach_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:theme="@style/AttachName"
                    app:layout_constraintHorizontal_bias="0.0"
                    android:maxLines="1"
                    android:singleLine="true"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent" />

                <!-- Box1-2 : 첨부파일 사이즈-->
                <TextView
                    android:id="@+id/tv_attach_size"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:theme="@style/AttachSize"
                    android:maxLines="1"
                    android:singleLine="true"
                    app:layout_constraintTop_toBottomOf="@id/tv_attach_name"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <!-- Box2 : 삭제 아이콘-->
            <ImageView
                android:id="@+id/iv_delete"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toEndOf="@id/cl_attach_info"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:src="@drawable/ic_attach_delete" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>