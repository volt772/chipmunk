<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/md_12" >

        <!-- Main Box-->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cv_attach_box"
            android:layout_width="@dimen/md_180"
            android:layout_height="@dimen/md_105"
            android:layout_marginEnd="@dimen/md_18"
            android:paddingVertical="@dimen/md_10"
            android:paddingHorizontal="@dimen/md_10"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:background="@drawable/bg_attach_gray_corner" >

            <!-- Box1 : Ext Icon, Delete Button-->
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/cl_top_box"
                android:layout_width="match_parent"
                android:layout_height="@dimen/md_33"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" >

                <ImageView
                    android:id="@+id/iv_ext_icon"
                    android:layout_width="@dimen/md_32"
                    android:layout_height="@dimen/md_32"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    android:src="@drawable/ic_file_pdf" />

                <ImageView
                    android:id="@+id/iv_delete"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:src="@drawable/ic_attach_delete" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <!-- Box2 : File Name-->
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/cl_mid_box"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/md_8"
                app:layout_constraintTop_toBottomOf="@id/cl_top_box"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" >

                <TextView
                    android:id="@+id/tv_attach_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:theme="@style/AttachName"
                    app:layout_constraintHorizontal_bias="0.0"
                    android:maxLines="1"
                    android:singleLine="true"
                    app:layout_constrainedWidth="true"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <!-- Box3 : File Size-->
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/cl_bot_box"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/md_8"
                app:layout_constraintTop_toBottomOf="@id/cl_mid_box"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" >

                <TextView
                    android:id="@+id/tv_attach_size"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:theme="@style/AttachSize"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent" />
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>