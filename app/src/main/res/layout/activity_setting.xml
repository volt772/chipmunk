<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/coordinator_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/gray_h0_5">

        <!-- AppBar-->
        <com.google.android.material.appbar.AppBarLayout
            android:id="@+id/abl_setting"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent">

            <!-- Toolbar -->
            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbar_main"
                android:layout_width="match_parent"
                android:layout_height="@dimen/md_60"
                android:background="@color/material_amber_700">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/cl_toolbar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/iv_close"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_toolbar_close"
                        android:background="?selectableItemBackgroundBorderless"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/toolbar_title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="@dimen/md_18"
                        android:ellipsize="end"
                        android:paddingEnd="@dimen/md_20"
                        android:maxLines="1"
                        android:gravity="center"
                        android:textSize="@dimen/md_18"
                        android:text="@string/setting"
                        android:textColor="@color/white"
                        app:layout_constrainedWidth="true"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.appcompat.widget.Toolbar>
        </com.google.android.material.appbar.AppBarLayout>

        <!-- Scroll-->
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="@dimen/md_0"
            android:fillViewport="true"
            app:layout_constraintTop_toBottomOf="@id/abl_setting"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" >

            <!-- Box 0 : 메인-->
            <androidx.constraintlayout.widget.ConstraintLayout
                android:background="@color/gray_h0_5"
                android:id="@+id/cl_settings_main"
                android:layout_width="match_parent"
                android:layout_height="@dimen/md_0"
                android:padding="@dimen/md_18"
                app:layout_constraintBottom_toBottomOf="parent" >

                <!-- Box 1 : 사용자 프로필-->
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/cl_user_profile"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/md_0"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent" >

                    <!-- Box 1-1 : 사용자 프로필 이미지-->
                    <io.getstream.avatarview.AvatarView
                        android:id="@+id/av_profile"
                        android:layout_width="@dimen/md_75"
                        android:layout_height="@dimen/md_75"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:avatarViewBorderColor="@color/material_amber_700"
                        app:avatarViewBorderWidth="3dp"
                        app:avatarViewErrorPlaceholder="@drawable/ic_profile_default"
                        app:avatarViewShape="circle" />

                    <!-- Box 1-2 : 사용자 상세정보-->
                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/cl_user_labels"
                        android:layout_width="@dimen/md_0"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/md_20"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toEndOf="@id/av_profile"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent" >

                        <!-- Box 1-2-1 : 사용자 이름-->
                        <TextView
                            android:id="@+id/tv_user_name"
                            android:layout_width="@dimen/md_0"
                            android:layout_height="wrap_content"
                            android:theme="@style/SettingUserName"
                            android:text="@string/unknown_membership"
                            android:maxLines="1"
                            android:ellipsize="end"
                            tools:text="사용자 이름"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintEnd_toEndOf="parent" />

                        <!-- Box 1-2-2 : 사용자 이메일-->
                        <TextView
                            android:id="@+id/tv_user_email"
                            android:layout_width="@dimen/md_0"
                            android:layout_height="wrap_content"
                            android:theme="@style/SettingUserEmail"
                            android:text=""
                            android:maxLines="1"
                            android:ellipsize="end"
                            tools:text="volt772@naver.com"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/tv_user_name" />

                        <!-- Box 1-2-3 : 내 체크리스트 N개-->
                        <TextView
                            android:id="@+id/tv_user_checklist_count"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            tools:text="내 체크리스트 : 50000개"
                            android:layout_marginTop="@dimen/md_8"
                            android:theme="@style/SettingUserChecklistCount"
                            android:paddingHorizontal="@dimen/md_5"
                            android:paddingVertical="@dimen/md_3"
                            android:background="@drawable/bg_full_rounded_amber"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/tv_user_email" />
                    </androidx.constraintlayout.widget.ConstraintLayout>
                </androidx.constraintlayout.widget.ConstraintLayout>

                <!-- Box 2 : 설정카테고리-->
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/cl_settings"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/md_32"
                    android:background="@drawable/bg_setting"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/cl_user_profile" >

                    <!-- Box 2-1 : 체크리스트 동기화-->
                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/cl_checklist_sync"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/md_56"
                        android:foreground="?selectableItemBackgroundBorderless"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent" >

                        <!-- Box 2-1 : `체크리스트 동기화`레이블-->
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/checklist_sync"
                            android:theme="@style/SettingMenuLabel"
                            android:paddingHorizontal="@dimen/md_18"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintEnd_toEndOf="parent" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/md_1"
                            android:background="@drawable/line_shadow"
                            app:layout_constraintBottom_toBottomOf="parent" />
                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <!-- Box 2-2 : 카테고리 관리-->
                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/cl_category_manage"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/md_56"
                        android:foreground="?selectableItemBackgroundBorderless"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/cl_checklist_sync" >

                        <!-- Box 2-1 : `카테고리 관리`레이블-->
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/category_manage"
                            android:theme="@style/SettingMenuLabel"
                            android:paddingHorizontal="@dimen/md_18"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintEnd_toEndOf="parent" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/md_1"
                            android:background="@drawable/line_shadow"
                            app:layout_constraintBottom_toBottomOf="parent" />
                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <!-- Box 2-3 : 앱정보-->
                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/cl_app_info"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/md_56"
                        android:foreground="?selectableItemBackgroundBorderless"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/cl_category_manage" >

                        <!-- Box 2-3 : `앱정보`레이블-->
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/app_info"
                            android:theme="@style/SettingMenuLabel"
                            android:paddingHorizontal="@dimen/md_18"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintEnd_toEndOf="parent" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/md_1"
                            android:background="@drawable/line_shadow"
                            app:layout_constraintBottom_toBottomOf="parent" />
                    </androidx.constraintlayout.widget.ConstraintLayout>
                </androidx.constraintlayout.widget.ConstraintLayout>

                <!-- Box 3 : 사용자 OUT 컨트롤-->
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/cl_user_out"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/md_24"
                    android:background="@drawable/bg_setting"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/cl_settings" >

                    <!-- Box 3-1 : 로그아웃-->
                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/cl_user_logout"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/md_56"
                        android:foreground="?selectableItemBackgroundBorderless"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent" >

                        <!-- Box 3-1 : `로그아웃`레이블-->
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/membership_logout"
                            android:theme="@style/SettingMenuLabel"
                            android:paddingHorizontal="@dimen/md_18"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintEnd_toEndOf="parent" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/md_1"
                            android:background="@drawable/line_shadow"
                            app:layout_constraintBottom_toBottomOf="parent" />
                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <!-- Box 3-2 : 회원탈퇴-->
                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/cl_user_remove"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/md_56"
                        android:foreground="?selectableItemBackgroundBorderless"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/cl_user_logout" >

                        <!-- Box 3-1 : `회원탈퇴`레이블-->
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/membership_withdrawal"
                            android:theme="@style/SettingMenuLabel"
                            android:paddingHorizontal="@dimen/md_18"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintEnd_toEndOf="parent" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/md_1"
                            android:background="@drawable/line_shadow"
                            app:layout_constraintBottom_toBottomOf="parent" />
                    </androidx.constraintlayout.widget.ConstraintLayout>
                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </ScrollView>

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>