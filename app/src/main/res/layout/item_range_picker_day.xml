<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/md_8">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="2">

        <!-- 여백배경 (좌측)-->
        <View
            android:id="@+id/vw_left_bg"
            android:layout_width="@dimen/md_0"
            android:layout_height="@dimen/md_48"
            android:layout_weight="1" />

        <!-- 여백배경 (우측)-->
        <View
            android:id="@+id/vw_right_bg"
            android:layout_width="@dimen/md_0"
            android:layout_height="@dimen/md_48"
            android:layout_weight="1" />
    </LinearLayout>

    <!-- '일'-->
    <TextView
        android:id="@+id/tv_day_name"
        android:layout_width="@dimen/md_48"
        android:layout_height="@dimen/md_48"
        style="@style/RangePickerCell.Day"
        tools:text="31" />
</FrameLayout>