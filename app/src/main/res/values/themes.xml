<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Chipmunk" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/material_amber_700</item>
        <item name="colorPrimaryVariant">@color/material_amber_700</item>
        <item name="colorOnPrimary">@color/material_amber_700</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.Chipmunk.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.Chipmunk.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.Chipmunk.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="Theme.App.Starting" parent="Theme.SplashScreen">
        <item name="android:windowSplashScreenBackground">@color/material_blue_500</item>
        <item name="android:windowSplashScreenAnimatedIcon">@drawable/ic_launcher_foreground</item>
        <item name="postSplashScreenTheme">@style/Theme.Chipmunk</item>

        <!-- 필요시 다크모드 같은 상황 고려. Status bar and Nav bar configs -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/white</item>
        <item name="android:navigationBarColor">@color/white</item>
        <item name="android:windowLightStatusBar">true</item>
    </style>

    <!-- BottomSheet -->
    <style name="BottomSheet" parent="@style/Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/bg_bottom_sheet_rounded_corner</item>
    </style>

    <!-- BottomSheetDialogRound -->
    <style name="BottomDialogRoundStyle" parent="@style/Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/BottomSheet</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowSoftInputMode">adjustResize</item>
        <item name="colorControlActivated">@color/gray_h0_8</item>
    </style>

    <!-- TEST: AlertDialog-->
    <style name="AlertDialogTheme" parent="ThemeOverlay.AppCompat.Dialog.Alert">
        <item name="colorControlNormal">@color/white</item>
        <item name="android:textSize">@dimen/md_15</item>
        <item name="android:colorAccent">@color/material_light_blue_600</item>
        <item name="android:windowMinWidthMajor">95%</item>
        <item name="android:windowMinWidthMinor">95%</item>
        <item name="android:windowTitleStyle">@style/AlertDialogThemeTitle</item>
        <item name="buttonBarNegativeButtonStyle">@style/AlertDialogThemeNegativeButton</item>
        <item name="buttonBarPositiveButtonStyle">@style/AlertDialogThemePositiveButtonRed</item>
    </style>

    <!-- AlertDialogTheme 본문-->
    <style name="AlertDialogThemeMessage" parent="AlertDialogTheme">
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/gray_h0</item>
        <item name="android:textSize">@dimen/md_14</item>
    </style>

    <!-- AlertDialogTheme 커스텀 타이틀-->
    <style name="AlertDialogThemeTitle" parent="AlertDialogTheme">
        <item name="android:textColor">@color/black_h32</item>
        <item name="android:textSize">@dimen/md_16</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- AlertDialogTheme Negative 버튼-->
    <style name="AlertDialogThemeNegativeButton" parent="Widget.AppCompat.Button.ButtonBar.AlertDialog">
        <item name="android:textColor">@color/gray_h0_6</item>
        <item name="android:textSize">@dimen/md_14</item>
    </style>

    <!-- AlertDialogTheme Positive 버튼-->
    <style name="AlertDialogThemePositiveButton" parent="Widget.AppCompat.Button.ButtonBar.AlertDialog">
        <item name="android:textSize">@dimen/md_14</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- AlertDialogTheme Positive (Red) 버튼-->
    <style name="AlertDialogThemePositiveButtonRed" parent="AlertDialogThemePositiveButton">
        <item name="android:textColor">@color/material_amber_700</item>
    </style>

    <!-- AlertDialogTheme Positive (Blue) 버튼-->
    <style name="AlertDialogThemePositiveButtonBlue" parent="AlertDialogThemePositiveButton">
        <item name="android:textColor">@color/purple_700</item>
    </style>

    <style name="RegisterDaysCalendar" parent="@style/Theme.AppCompat.Light.Dialog">
        <item name="colorAccent">@color/app_main_color</item>
        <item name="android:windowBackground">@drawable/dp_background</item>
    </style>

    <!-- CheckList Detail Dialog : CheckList Name -->
    <style name="CheckListDetailCheckListName">
        <item name="android:textSize">@dimen/md_18</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">@font/spoqahansansneo_bold</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">1</item>
    </style>

    <!-- CheckList Detail Dialog : Item Labels -->
    <style name="CheckListDetailLabel">
        <item name="android:textSize">@dimen/md_14</item>
        <item name="android:textColor">@color/dialog_text_baby_powder_600</item>
        <item name="android:fontFamily">@font/spoqahansansneo_regular</item>
    </style>

    <!-- CheckList Detail Dialog : Item Values -->
    <style name="CheckListDetailValue">
        <item name="android:textSize">@dimen/md_14</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">@font/spoqahansansneo_regular</item>
    </style>

    <!-- CheckList Detail Dialog : Category Name -->
    <style name="CheckListDetailCategoryName">
        <item name="android:textSize">@dimen/md_14</item>
        <item name="android:textColor">@color/dialog_text_baby_powder_600</item>
        <item name="android:fontFamily">@font/spoqahansansneo_regular</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">1</item>
        <item name="android:gravity">center</item>
    </style>

    <!-- CheckList Detail Dialog : Bottom Button -->
    <style name="CheckListDetailBotButton">
        <item name="android:textSize">@dimen/md_16</item>
        <item name="android:fontFamily">@font/spoqahansansneo_regular</item>
        <item name="android:gravity">center</item>
    </style>

    <!-- Update Dialog : CheckList Name -->
    <style name="UpdateDialogName">
        <item name="android:textSize">@dimen/md_18</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">@font/spoqahansansneo_bold</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">1</item>
    </style>

    <!-- Update Dialog : Item Labels -->
    <style name="UpdateDialogLabel">
        <item name="android:textSize">@dimen/md_14</item>
        <item name="android:textColor">@color/dialog_text_baby_powder_600</item>
        <item name="android:fontFamily">@font/spoqahansansneo_regular</item>
    </style>

    <!-- Update Dialog : Item Values -->
    <style name="UpdateDialogValue">
        <item name="android:textSize">@dimen/md_14</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">@font/spoqahansansneo_regular</item>
    </style>

    <!-- Update Dialog : Bottom Button -->
    <style name="UpdateDialogBotButton">
        <item name="android:textSize">@dimen/md_16</item>
        <item name="android:fontFamily">@font/spoqahansansneo_regular</item>
        <item name="android:gravity">center</item>
    </style>
</resources>