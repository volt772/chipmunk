<resources>

    <style name="TasksRecyclerStyle">
        <item name="android:clipToPadding">false</item>
        <item name="android:scrollbars">vertical</item>
        <item name="android:paddingTop">@dimen/md_4</item>
    </style>

    <!-- AppBaseTextColor -->
    <style name="AppBaseTextColor">
        <item name="android:textColor">@color/black_h32</item>
    </style>

    <!-- DashBoard : Appbar : CheckList -->
    <style name="DashBoardAppBarTitle">
        <item name="android:textSize">@dimen/md_23</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/spoqahansansneo_bold</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">2</item>
    </style>

    <!-- Attach Name Style -->
    <style name="AttachName">
        <item name="android:textSize">@dimen/md_14</item>
        <item name="android:textColor">@color/black_h32</item>
    </style>

    <!-- Attach Size Style -->
    <style name="AttachSize">
        <item name="android:textSize">@dimen/md_12</item>
        <item name="android:textColor">@color/gray_h0_4</item>
    </style>


    <!-- Setting User Name -->
    <style name="SettingUserName">
        <item name="android:textSize">@dimen/md_18</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/black_h32</item>
    </style>

    <!-- Setting User Email -->
    <style name="SettingUserEmail">
        <item name="android:textSize">@dimen/md_14</item>
        <item name="android:textColor">@color/black_h32</item>
    </style>

    <!-- Setting User Checklist Count -->
    <style name="SettingUserChecklistCount">
        <item name="android:textSize">@dimen/md_14</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <!-- Setting Menu Label -->
    <style name="SettingMenuLabel">
        <item name="android:textSize">@dimen/md_16</item>
        <item name="android:textColor">@color/black_h32</item>
    </style>

    <!-- Register PlaceHolder Label -->
    <style name="RegisterPlaceHolderLabel">
        <item name="android:textSize">@dimen/md_16</item>
        <item name="colorControlActivated">@color/material_amber_700</item>
    </style>

    <!-- List No Label -->
    <style name="EmptyLabel">
        <item name="android:textSize">@dimen/md_16</item>
        <item name="android:textColor">@color/gray_h0_4</item>
        <item name="android:gravity">center</item>
    </style>

    <!-- Setting Version Label -->
    <style name="SettingMenuVersion">
        <item name="android:textSize">@dimen/md_14</item>
        <item name="android:textColor">@color/gray_h0_4</item>
    </style>

    <!-- Setting Version New Label -->
    <style name="SettingMenuVersionNew">
        <item name="android:textSize">@dimen/md_14</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/material_amber_700</item>
    </style>

    <!-- OpenSource Name -->
    <style name="OpenSourceName" parent="">
        <item name="android:textSize">@dimen/md_16</item>
        <item name="android:textColor">@color/gray_h0_4</item>
        <item name="android:fontFamily">@font/spoqahansansneo_bold</item>
    </style>

    <!-- OpenSource Content -->
    <style name="OpenSourceContent">
        <item name="android:textSize">@dimen/md_14</item>
        <item name="android:textColor">@color/gray_h0_4</item>
        <item name="android:fontFamily">@font/spoqahansansneo_regular</item>
    </style>

    <style name="CheckListDetailDialog" parent="Theme.MaterialComponents.Light.Dialog">
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryDark">@color/white</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowLightStatusBar">true</item>
    </style>

    <style name="UpdateDialog" parent="Theme.MaterialComponents.Light.Dialog">
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryDark">@color/white</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowLightStatusBar">true</item>
    </style>

    <!-- DashBoard : CheckList : Item : Common -->
    <style name="DashBoardCheckListCommon">
        <item name="android:fontFamily">@font/spoqahansansneo_regular</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">1</item>
    </style>

    <!-- DashBoard : CheckList : Item : Title -->
    <style name="DashBoardCheckListTitle" parent="DashBoardCheckListCommon">
        <item name="android:textSize">@dimen/md_16</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <!-- DashBoard : CheckList : Item : DDay -->
    <style name="DashBoardCheckListDay" parent="DashBoardCheckListCommon">
        <item name="android:textSize">@dimen/md_14</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <!-- DashBoard : CheckList : Item : Desc -->
    <style name="DashBoardCheckListDesc" parent="DashBoardCheckListCommon">
        <item name="android:textSize">@dimen/md_14</item>
        <item name="android:textColor">@color/gray_h0_4</item>
    </style>

</resources>
